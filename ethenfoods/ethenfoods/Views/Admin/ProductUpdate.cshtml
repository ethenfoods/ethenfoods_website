@model Product

@{
    ViewData["Title"] = "ProductUpdate";
}

<h2>Update @Model.Name</h2>

<form method="post" form-action="Create">
    <div>
        <label asp-for="Name"></label>
        <input type="text" asp-for="Name" required />
        <span asp-validation-for="Name"></span>
    </div>

    <div>
        <label asp-for=SKU""></label>
        <input type="text" asp-for="SKU" />
        <span asp-validation-for="SKU"></span>
    </div>

    <div>
        <label asp-for="Price"></label>
        <input type="number" step="0.01" asp-for="Price" />
        <span asp-validation-for="Price"></span>
    </div>

    <div>
        <label asp-for="Quantity"></label>
        <input type="number" asp-for="Quantity" />
        <span asp-validation-for="Quantity"></span>
    </div>

    <div>
        <label asp-for="Description"></label>
        <input type="text" asp-for="Description" />
        <span asp-validation-for="Description"></span>
    </div>

    <div>
        <label asp-for="Image"></label>
        <input type="url" asp-for="Image" />
        <span asp-validation-for="Image"></span>
    </div>

    <div>
        <label asp-for="ProductCategory"></label>
        @(Html.DropDownListFor(p => p.ProductCategory, new SelectList(Enum.GetValues(typeof(Category))), "Select Category"))
    </div>

    <button type="submit"> Update Product </button>

</form>

<a asp-controller="Admin" asp-action="ProductList"> Back to Product List </a>