@model ProductListViewModel
@{
    ViewData["Title"] = "ProductList";
    Layout = "_Layout";
}

<h2>Product List</h2>

<table>
    <tr>
        <th>@Html.DisplayNameFor(p => p.Products[0].SKU)</th>
        <th>@Html.DisplayNameFor(p => p.Products[0].Name)</th>
        <th>@Html.DisplayNameFor(p => p.Products[0].Price)</th>
        <th>@Html.DisplayNameFor(p => p.Products[0].PerCase)</th>
        <th>@Html.DisplayNameFor(p => p.Products[0].PerBox)</th>
        <th>@Html.DisplayNameFor(p => p.Products[0].Quantity) </th>
        <th>@Html.DisplayNameFor(p => p.Products[0].ProductCategory)</th>
        <th>@Html.DisplayNameFor(p => p.Products[0].Image)</th>
        <th>@Html.DisplayNameFor(p => p.Products[0].Description)</th>
        <th></th>
    </tr>

    @foreach (Product product in Model.Products)
    {
        <tr>
            <td>@product.SKU</td>
            <td>@product.Name</td>
            <td>@product.Price</td>
            <td>@product.PerCase</td>
            <td>@product.PerBox</td>
            <td>@product.Quantity</td>
            <td>@product.ProductCategory</td>
            <td><img src="@product.Image" /></td>
            <td>@product.Description</td>
            <td>
                <a asp-controller="Admin" asp-action="ProductUpdate" asp-route-Id="@product.ID">Update</a>
                <a asp-controller="Admin" asp-action="ProductRemove" asp-route-Id="@product.ID">Delete</a>
            </td>
        </tr>
    }

</table>
<a asp-controller="Admin" asp-action="Dashboard"> Return to Dashboard </a>
<a asp-controller="Admin" asp-action="ProductCreate"> Create New </a>

